rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the User collection
    match /User/{userId} {
      // Allow users to read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for the PointShopItem collection
    match /PointShopItem/{itemId} {
      // Allow anyone (authenticated or not) to read the items
      allow read: if true;
      
      // Do not allow write operations to the PointShopItem collection
      allow write: if false;
    }
    
    // Rules for the UserPointShopTransactions collection
    match /UserPointShopTransactions/{transactionId} {
      // Allow creation of transactions by authenticated users
      allow create: if request.auth != null;
      
      // Do not allow update or delete operations on transactions
      allow update, delete: if false;
    }
  }
}


